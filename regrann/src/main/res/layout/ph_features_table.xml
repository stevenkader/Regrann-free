            app:drawableTint="#2196f3"
            app:layout_constraintEnd_toStartOf="@+id/feature_7_check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feature_6_text" />

        <ImageView
            android:id="@+id/feature_7_check"
            android:layout_width="24dp"

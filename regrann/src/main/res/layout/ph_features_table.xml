            android:layout_marginLeft="16dp"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center_vertical|center_horizontal|center|start"
            android:lines="1"
            android:text="4 Watermark Locations"
            android:textAlignment="viewStart"
            android:textColor="#1e1e1e"
            android:textSize="12sp"
            app:drawableLeftCompat="@drawable/ic_ph_feature_7"
            app:drawableTint="#2196f3"
            app:layout_constraintEnd_toStartOf="@+id/feature_6_check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feature_5a_text" />

        <ImageView
            android:id="@+id/feature_6_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/feature_6_text"
            app:layout_constraintEnd_toEndOf="@+id/premium_text"
            app:layout_constraintStart_toStartOf="@+id/premium_text"
            app:layout_constraintTop_toTopOf="@+id/feature_6_text"
            app:srcCompat="@drawable/ic_feature_check"
            app:tint="#2196f3" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/feature_6_text"
            app:layout_constraintEnd_toEndOf="@+id/basic_text"
            app:layout_constraintStart_toStartOf="@+id/basic_text"

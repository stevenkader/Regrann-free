            android:layout_height="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/feature_4_text"
            app:layout_constraintEnd_toEndOf="@+id/basic_text"
            app:layout_constraintStart_toStartOf="@+id/basic_text"
            app:layout_constraintTop_toTopOf="@+id/feature_4_text"
            app:srcCompat="@drawable/ic_feature_dash"
            app:tint="#2196f3" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/feature_5_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center_vertical|center_horizontal|center|start"

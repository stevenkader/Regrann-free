            app:layout_constraintBottom_toBottomOf="@+id/feature_5_text"
            app:layout_constraintEnd_toEndOf="@+id/basic_text"
            app:layout_constraintStart_toStartOf="@+id/basic_text"
            app:layout_constraintTop_toTopOf="@+id/feature_5_text"
            app:srcCompat="@drawable/ic_feature_dash"
            app:tint="#2196f3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/feature_5a_text"

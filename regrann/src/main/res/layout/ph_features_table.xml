            app:layout_constraintBottom_toBottomOf="@+id/feature_5a_text"
            app:layout_constraintEnd_toEndOf="@+id/premium_text"
            app:layout_constraintStart_toStartOf="@+id/premium_text"
            app:layout_constraintTop_toTopOf="@+id/feature_5a_text"
            app:srcCompat="@drawable/ic_feature_check"

            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center_vertical|center_horizontal|center|start"
            android:lines="1"
            android:text="Custom Watermark"
            android:textAlignment="viewStart"
            android:textColor="#1e1e1e"
            android:textSize="14sp"
            app:drawableLeftCompat="@drawable/ic_ph_feature_7"
            app:drawableTint="#2196f3"
            app:layout_constraintEnd_toStartOf="@+id/feature_5a_check"

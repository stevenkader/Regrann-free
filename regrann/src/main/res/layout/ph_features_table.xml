            android:text="@string/ph_feature_4"
            android:textAlignment="viewStart"
            android:textColor="#1e1e1e"
            android:textSize="14sp"
            app:drawableLeftCompat="@drawable/bolt"
            app:drawableTint="#2196f3"
            app:layout_constraintEnd_toStartOf="@+id/feature_4_check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feature_3_text" />

        <ImageView
            android:id="@+id/feature_4_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/feature_4_text"
            app:layout_constraintEnd_toEndOf="@+id/premium_text"
            app:layout_constraintStart_toStartOf="@+id/premium_text"
            app:layout_constraintTop_toTopOf="@+id/feature_4_text"
            app:srcCompat="@drawable/ic_feature_check"
            app:tint="#2196f3" />

        <ImageView
